module io {
    module file {
        open: Any
        write: Any
        close: Any
        stdout: Any
    }

    module console {
        println: Any
        readln: Any
    }

    module _Detail_ {
        lib = runtime::load_library('lib/libace-runtime.so')

        io::file::open = runtime::load_function(lib,'io_open')
        io::file::write = runtime::load_function(lib,'io_write')
        io::file::close = runtime::load_function(lib, 'io_close')
        io::file::stdout = call(runtime::load_function(lib, 'io_get_stdout'))
    }
}