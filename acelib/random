module random {
  type RandomGenerator {
    seed: Int?
    gen: Any?

    next: Function = (self) {
      if self.gen == null {
        if self.seed == null {
          self.seed = time::now()
        }
        self.gen = random_utils::new_random(self.seed)
      }

      return random_utils::get_next(self.gen)
    }
  } 
}