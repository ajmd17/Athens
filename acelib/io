module io {
    open: Any
    write: Any
    close: Any
    stdout: Any

    module detail {
        lf = runtime::load_function
        lib = runtime::load_library('lib/libace-runtime.so')

        io::open = lf(lib,'io_open')
        io::write = lf(lib,'io_write')
        io::close = lf(lib, 'io_close')
        io::stdout = call(lf(lib, 'io_get_stdout'))
    }
}
